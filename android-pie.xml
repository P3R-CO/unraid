<?xml version="1.0"?>
<Container version="2">
  <Name>P3R Android Pie</Name>
  <Repository>p3rco/android-pie:latest</Repository>
  <Registry>https://hub.docker.com/repository/docker/p3rco/android-pie</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://discord.gg/uRhFDDK</Support>
  <Overview>Android Pie (9.0) as a container with a browser based noVNC interface.</Overview>
  <Category>Tools: Status:Beta</Category>
  <WebUI>http://[IP]:[PORT:6080]/</WebUI>
  <Icon>https://raw.githubusercontent.com/P3R-CO/unraid/master/Android-Pie-P3R-256px.png</Icon>
  <ExtraParams>-e 'USER_ID'='0' -e 'GROUP_ID'='0'</ExtraParams>
  <DonateText>Please support me on Patreon</DonateText>
  <DonateLink>https://www.patreon.com/keepitPG</DonateLink>

 <Config Name="VNC Port" Target="6080" Default="6080" Mode="tcp" Description="Container Port: 6080" Type="Port" Display="advanced-hide" Required="true" Mask="false">6080</Config>
  <Config Name="AppData" Target="/storage/" Default="/mnt/user/appdata/P3R-Android-Pie/" Mode="rw" Description="Container Path: /storage/" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/P3R-Android-Pie/</Config>
  <Config Name="Arguments" Target="EMULATOR_ARGS" Default="-gpu swiftshader_indirect -accel on" Mode="" Description="Container Variable: EMULATOR_ARGS" Type="Variable" Display="advanced-hide" Required="true" Mask="false">-gpu swiftshader_indirect -accel on</Config>
</Container>